{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Launch SIGA.WebApi",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/SIGA.WebApi/bin/Debug/net10.0/SIGA.WebApi.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/SIGA.WebApi",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}

